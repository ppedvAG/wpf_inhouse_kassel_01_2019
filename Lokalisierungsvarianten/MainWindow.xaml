<Window x:Class="Lokalisierungsvarianten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lokalisierungsvarianten"
        mc:Ignorable="d"
        Language="de"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Sprache" MenuItem.Click="MenuItem_Click">
                <MenuItem Tag="German.xaml"  Header="Deutsch" />
                <MenuItem Tag="English.xaml" Header="English" />
            </MenuItem>
        </Menu>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Source="MainPage.xaml" />
    </DockPanel>
</Window>