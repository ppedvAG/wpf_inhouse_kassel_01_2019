<Application x:Class="Lokalisierungsvarianten.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lokalisierungsvarianten"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--https://docs.microsoft.com/de-de/dotnet/framework/wpf/app-development/pack-uris-in-wpf-->
                <!--Evtl. eigene ResourceDictionary-Klasse ableiten-->
                <ResourceDictionary  Source="pack://application:,,,/Languages;component/German.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--lokale Resourcen-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
