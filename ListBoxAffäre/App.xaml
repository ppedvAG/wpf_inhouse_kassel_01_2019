<Application x:Class="ListBoxAffäre.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ListBoxAffäre"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="datatemplate">
            <Border Background="Aqua" Padding="2" BorderBrush="Black" BorderThickness="1">
                <DockPanel PreviewMouseUp="DockPanel_PreviewMouseUp">
                    <TextBlock Margin="10" DockPanel.Dock="Left" Text="{Binding}" />
                    <Button Margin="10" HorizontalAlignment="Center">Dummy</Button>
                </DockPanel>
            </Border>
        </DataTemplate>
    </Application.Resources>
</Application>
