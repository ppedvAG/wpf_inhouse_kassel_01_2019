<UserControl x:Class="RadioGroupTester.RadioGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RadioGroupTester"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="standard" TargetType="local:FakeCheckBox">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="Margin" Value="10" />
        </Style>
    </UserControl.Resources>
    <Grid x:Name="mainGrid">
        <WrapPanel Orientation="{Binding WrapPanelOrientation}" VerticalAlignment="Center" x:Name="wpRadioButtons" RadioButton.Checked="WpRadioButtons_Checked">
           
        </WrapPanel>     
    </Grid>
</UserControl>
